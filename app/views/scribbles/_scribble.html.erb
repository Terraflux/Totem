<%= content_tag :div, class: 'media', id: "scribble-#{scribble.id}" do %>
	<div class="media">
		<div class="media-body">
			<small>
				<p><%= scribble.body %></p>
				<p><%= scribble.alias.name %> made this <%= time_ago_in_words(scribble.created_at) %> ago</p>
			</small>
		</div>
		<div class="btn btn-danger">
			<%= link_to "Delete", [scribble.inscription, scribble], method: :delete, remote: true %>
		</div>
	</div>
<% end %>