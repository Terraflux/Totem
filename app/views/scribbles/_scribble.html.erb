<%= content_tag :div, class: 'media', id: "scribble-#{scribble.id}" do %>
	<div class="media">
		<div class="media-body">
			<small>
				<p class="left-padding"><%= scribble.body %></p>
				<p class="left-padding date"><%= scribble.created_at %></p>
			</small>
		</div>
		<div class="spacer">
			<%= link_to "Delete", [scribble.inscription, scribble], method: :delete, class: 'btn btn-danger', remote: true %>
		</div>
	</div>
<% end %>