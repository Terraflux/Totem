<h1>Select an Alias</h1>

<div class="row">
	<div class="col-md-8">
		<%= form_for @alias do |f| %>

			<% if @alias.errors.any? %>
				<div class="alert alert-danger">
					<h4><%= pluralize(@alias.errors.count, "error") %>.</h4>
					<ul>
						<% @alias.errors.full_messages.each do |msg| %>
							<li><%= msg %></li>
						<% end %>
					</ul>
				</div>
			<% end %>

			<%= form_group_tag(@alias.errors[:name]) do %>
				<%= f.label :name %>
				<%= f.text_field :name, autofocus: true, class: 'form-control', placeholder: "#{Faker::Internet.user_name}" %>
			<% end %>

			<div class="form-group">
				<%= f.submit "Submit", class: 'btn btn-success' %>
			</div>
		<% end %>
	</div>
</div>